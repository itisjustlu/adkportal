  <version>3.0</version>

	<install for="2.0 - 2.0.99">
		<readme parsebbc="true">files/readme.txt</readme>
		<!-- Theme Dir -->
		<require-dir name="Themes" destination="$boarddir" />
		<redirect url="$scripturl?action=admin;area=adkadmin" timeout="1000"></redirect>
	</install>
		
