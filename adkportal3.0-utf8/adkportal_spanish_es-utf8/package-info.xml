		<readme parsebbc="true">files/readme1.txt</readme>
		<!-- Language Dir -->
		<remove-file name="$themedir/languages/AdkPortal/Adk-Admin.spanish_es-utf8.php" />
		<remove-file name="$themedir/languages/AdkPortal/Adk-AdminBlocks.spanish_es-utf8.php" />
		<remove-file name="$themedir/languages/AdkPortal/Adk-AdminDownloads.spanish_es-utf8.php" />
		<remove-file name="$themedir/languages/AdkPortal/Adk-AdminModules.spanish_es-utf8.php" />
		<remove-file name="$themedir/languages/AdkPortal/Adk-Downloads.spanish_es-utf8.php" />
		<remove-file name="$themedir/languages/AdkPortal/Adk-echomodules.spanish_es-utf8.php" />
		<remove-file name="$themedir/languages/AdkPortal/Adk-Help.spanish_es-utf8.php" />
		<remove-file name="$themedir/languages/AdkPortal/Adk-Modifications.spanish_es-utf8.php" />
		<redirect url="$scripturl?action=admin;area=packages" timeout="1000"></redirect>
	</uninstall>

</package-info>